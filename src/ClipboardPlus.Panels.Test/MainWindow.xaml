<Window
    x:Class="ClipboardPlus.Panels.Test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClipboardPlus.Panels.Test"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:panels="clr-namespace:ClipboardPlus.Panels.Views;assembly=ClipboardPlus.Panels"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TabControl SelectedIndex="1">
            <TabItem Header="Settings">
                <panels:SettingsPanel x:Name="SettingsPanel" />
            </TabItem>
            <TabItem Header="Preview">
                <panels:PreviewPanel />
            </TabItem>
        </TabControl>
    </Grid>
</Window>