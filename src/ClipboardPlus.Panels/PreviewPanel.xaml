<UserControl x:Class="ClipboardPlus.Panels.PreviewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClipboardPlus.Panels"
             xmlns:ic="clr-namespace:FluentIcons.WPF;assembly=FluentIcons.WPF"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d">

    <Grid
        Width="Auto"
        Height="Auto"
        HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>

        <!-- Image Viewer -->
        <Image
            Grid.Row="0"
            Grid.Column="0"
            Panel.ZIndex="0"
            x:Name="PreImage" Margin="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Hidden"
            MaxWidth="320"
            MaxHeight="400">
            <Image.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Save in cache folder" Click="ImSaveAs_Click">
                        <ic:SymbolIcon Symbol="Save" />
                    </MenuItem>
                </ContextMenu>
            </Image.ContextMenu>
        </Image>

        <!-- Text Viewer -->
        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            x:Name="TxtBoxPre"
            IsUndoEnabled="True"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Left"
            MinWidth="320"
            Panel.ZIndex="1"
            Text=""
            TextAlignment="Left"
            FontSize="14"
            IsReadOnly="False"
            Margin="5"
            Padding="5"
            Focusable="True"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            GotFocus="TxtBoxPre_GotFocus"
            TextChanged="TxtBoxPre_TextChanged"
            UseLayoutRounding="False" />

        <!-- Status Bar & Buttons -->
        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,5,5,5"
            HorizontalAlignment="Stretch">

            <!-- Word Count Text -->
            <TextBlock
                x:Name="TextBlockWordCount"
                DockPanel.Dock="Left"
                Margin="10,5,10,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            </TextBlock>

            <!-- Buttons -->
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                DockPanel.Dock="Right">

                <!-- Copy Button -->
                <Button
                    x:Name="BtnCopy"
                    ToolTip="Copy to clipboard"
                    Width="33"
                    Height="33"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Padding="3"
                    Margin="5"
                    Click="BtnCopy_Click">
                    <ic:SymbolIcon Symbol="Copy" />
                </Button>

                <!-- Pin & Unpin Button -->
                <Button
                    x:Name="BtnPin"
                    ToolTip="Pin on top"
                    Width="33"
                    Height="33"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Padding="3"
                    Margin="5"
                    Click="BtnPin_Click">
                    <ic:SymbolIcon Symbol="Pin" />
                </Button>

                <!-- Delete Button -->
                <Button
                    x:Name="BtnDelete"
                    ToolTip="Delete this record"
                    Width="33"
                    Height="33"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Padding="3"
                    Margin="5"
                    Click="BtnDelete_Click">
                    <ic:SymbolIcon Symbol="Delete" />
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>